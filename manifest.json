{
  "manifest_version": 3,
  "name": "Font Explore",
  "version": "1.0",
  "description": "Parses and displays fonts used on the page, categorized by HTML tags, with highlighting.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}